<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="PaginaCommenti_anchorPane" styleClass="PaginaCommenti_anchorPane" stylesheets="@Applicazione.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.univr.javfx_scene.PaginaPaneCommenti">

    <children>
        <VBox fx:id="PaginaPaneCommenti_vBox" maxHeight="Infinity" prefWidth="350.0" styleClass="PaginaPaneCommenti_vBox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="PaginaPaneCommenti_label" styleClass="PaginaPanePrincipale_labelMusiche" text="Commenti" />
                <ScrollPane fitToWidth="true" styleClass="PaginaPrincipale_scrollPane" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="commentiContainer" prefWidth="1.0" spacing="5.0" styleClass="commentiContainer" VBox.vgrow="ALWAYS" />
                    </content>
                </ScrollPane>
                <TextArea fx:id="commentoTextArea" minHeight="100.0" prefRowCount="4" promptText="Scrivi un commento..." styleClass="commentoTextArea" wrapText="true"/>
            <HBox alignment="CENTER" prefHeight="40.0">
               <children>
                  <Button fx:id="PaginaPaneCommenti_bottoneAnnullaInvio" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#annullaCommento" prefHeight="30.0" prefWidth="100.0" styleClass="PaginaPaneCommenti_bottoneAnnullaInvio" text="Annulla" />
                  <Region HBox.hgrow="ALWAYS" />
                      <Button fx:id="PaginaPaneCommenti_bottoneInvia" minHeight="30.0" minWidth="200.0" onAction="#inviaCommento" prefHeight="30.0" prefWidth="200.0" styleClass="PaginaPaneCommenti_bottoneInvia" text="Invia" />
               </children>
            </HBox>
            </children>
        </VBox>
    </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>

</AnchorPane>
